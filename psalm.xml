        <LessSpecificReturnStatement errorLevel="suppress" />
    </issueHandlers>

    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
